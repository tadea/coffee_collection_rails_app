<p><%= review.comment %></p>

<% if logged_in? %>
    <% if review.user_id == current_user.id %>
      <%= link_to "Edit", edit_coffee_review_path(review.coffee, review) %>
      <%= link_to "Delete", coffee_review_path(review.coffee, review), method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
 <% end %>
