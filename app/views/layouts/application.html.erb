<!DOCTYPE html>
<html>
  <head>
    <title>CoffeeCollectionRailsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if logged_in? %>

    <nav class="navbar navbar-default", style="background-color: #e3f2fd;">
      <div class="container">
        <div class="navbar-header">

          <%= link_to "Coffee Collection", coffees_path, class: "navbar-brand" %>
          </div>

            <ul class="nav navbar-nav navbar-right">
                  <li><%= link_to "Log Out", logout_path, method: :delete %></li>
              </ul>

            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown show">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Grinds<span class="caret"</span></a>
                    <ul class="dropdown-menu" role"menu">
                      <% Grind.all.each do |grind| %>
                      <li>
                        <%= link_to grind.name, coffees_path(grind: grind.name), class: "link"%>
                      </li>
                      <% end %>
                    </li>
              </ul>
              <li><%= link_to "Add Coffee", new_coffee_path %></li>
            <% end %>
          </div>
        </nav>


        <div class="wrapper">
              <% if flash[:message] %>
                <p style="color: blue; font-size: 16px;"><%= flash[:message] %></p>
              <% end %>
              <% if flash[:error] %>
                <p style="color: red; font-size: 16px;"><%= flash[:error] %></p>
              <% end %>



<div class="container"
    <%= yield %>
    </div>


        <div class="container">
            <% if current_user.present? %>
            <p class='text-center'>Logged as:<%= current_user.email %></p>
            <% end%>
      </div>


  </body>
</html>
