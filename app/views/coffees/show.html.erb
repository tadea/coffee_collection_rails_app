
<h2><%= @coffee.name %></h2>
<h3><%= @coffee.origin %></h3>
<h4>Process: <%= @coffee.process %></h4>
<h4>Grind: <%= @coffee.grind.name %></h4>
<p><%= @coffee.description %></p>

<% if @coffee.user_id == current_user.id %>
  <%= link_to "Edit", edit_coffee_path %><br>
  <%= link_to "Delete", coffee_path(@coffee), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>
<br>
<h2>Reviews</h2>
<%= link_to "Create Review", new_coffee_review_path(@coffee) %>
<p><%= render @coffee.reviews %></p>
